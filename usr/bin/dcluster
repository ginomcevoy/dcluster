#!/bin/bash

# Create and manage Docker clusters, optionally run Ansible on the cluster.

# Giacomo Mc Evoy <giacomo.valenzano@atos.net>
# Atos 2019

# Calculate directory local to script
BIN_DIR="$( cd "$( dirname "$0" )" && pwd )"

# Pass the current directory
BASEPATH=$PWD

# we need to put basepath after the subcommand
SUB_COMMAND=$1
shift 1

cd $BIN_DIR/../..
PYTHONPATH=. python -m dcluster.main $SUB_COMMAND --basepath $BASEPATH $@
